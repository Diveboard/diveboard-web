                                return Number($(val).attr("name"));
                              }
                            });
  diveboard.propose("Confirm action", "We will be deleting the MASTER spot and ALL selected spot:<br/>"+spots_to_merge.toString(), {"Cancel": null, "OK": do_merge_delete_v});
