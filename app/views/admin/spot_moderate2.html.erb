function do_jump(e){
  if($("#jump_spot_from_list").val() == "" && $("#jump_spot_from_id").val() == ""){
    diveboard.notify("Error", "You can't load a spot if you dont't select one...");
    return
  }

  $("input[value=submit_jump]").click();
