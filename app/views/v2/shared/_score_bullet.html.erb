<%
  if defined? score != nil
    total = score.to_f
  else
    total = 0
  end
  if defined? color != nil
    case color
      when :blue
        div_class = "-blue"
      when :yellow
        div_class = ""
      else
        div_class = ""
    end
  else
    div_class = ""
  end

  count = 0
  while count < 5 do
    if total >= 1
      total -= 1
%>
  <td><div class="outter-bullet<%= div_class %>"><div class="inner-bullet-full<%= div_class %>"></div></div></td>
<%
    elsif total >= 0.5
      total -= 0.5
%>
  <td><div class="outter-bullet<%= div_class %>"><div class="inner-bullet-half<%= div_class %>"></div></div></td>
<%
    else
%>
  <td><div class="outter-bullet-empty"></div></td>
<%
    end
    count += 1
  end
%>