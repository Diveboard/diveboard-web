<%
  nb_cards_per_group = 4;
  i = 0;
  areas_pictures = []
%>
<div id="areas">
  <div id="category_title">
    <h2>
      <%= it("Nearby areas",
          scope: ['area_pages', 'v2', 'areas']) %>
    </h2>
    <div class="clear"></div>
  </div>
  <div class="cards_group">
  <%
    i=0
    areas_pictures = []
  %>
  <%
    while i < nb_cards_per_group && !@areas[i].nil? do
      location_title = @areas[i].geonames_core.name
      unless @areas[i].geonames_core.country.nil?
        location_title += ", #{@areas[i].geonames_core.country.cname}"
      end
  %>
    <div class="card_container">
      <%= link_to({controller: :area_pages, action: :index, country: @areas[i].url_country, vanity_url: @areas[i].url_name}) do %>
      <div class="card">
        <%
          picture = nil
          if !@areas[i].favorite_picture.nil?
            picture = @areas[i].favorite_picture
          else
            @areas[i].best_pictures.each do |p|
              if !p.nil? && areas_pictures.include?(p.id) == false &&
                picture = p
                areas_pictures << p.id
                break
              end
            end
            if picture.nil?
              @areas[i].pictures.each do |p|
                if !p.nil? && areas_pictures.include?(p.id) == false
                  picture = p
                  areas_pictures << p.id
                  break
                end
              end
            end
          end
        %>
        <div class="picture">
          <%unless picture.nil?%>
          <img src="<%= if !picture.nil? then picture.medium end %>" alt="Diving in <%= location_title %> - By <%= picture.user.nickname %>" />
          <%else%>
          <img src="/img/areas/default_banner.jpg" />
          <%end%>
        </div>
        <p class="title"><%= location_title %></p>
        <p class="subtitle"><%= picture.nil? ? '' : picture.dive.spot.name %></p>
        <table class="rating">
          <tr>
            <%=
              mark = (((@areas[i].mark * 5.0) / 100.0) * 2.0).round / 2.0
              render "v2/shared/score_bullet", :score => mark
            %>
            <td>
              <p>
                (<%= it("%{count} reviews",
                     scope: ['homepage', 'v2', 'featured_destinations'],
                     count: @areas[i].count_reviews) %>)
              </p>
            </td>
          </tr>
        </table>
        <div class="discover">
          <p>
            <%= it("Discover",
                scope: ['homepage', 'v2', 'featured_destinations']) %>
          </p>
          <img src="<%= HtmlHelper.lbroot "/img/icon_arrow_book_now_bw.svg" %>" alt="" />        
        </div>
      </div>
      <% end %>
    </div>
    <%
      i += 1
      end
    %>
  </div>
  <div class="clear"></div>
</div>